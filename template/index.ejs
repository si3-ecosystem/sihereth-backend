    <script>
      // Mobile Navigation
      function toggleMobileNav() {
        const nav = document.getElementById("mobileNav");
        const isOpen = !nav.classList.contains("translate-x-full");
        const menuIcon = document.getElementById("menuIcon");

        if (isOpen) {
          // Close the menu
          nav.classList.add("translate-x-full");
          menuIcon.className = "fas fa-bars text-2xl";
        } else {
          // Open the menu
          nav.classList.remove("translate-x-full");
          menuIcon.className = "fas fa-times text-2xl";
        }

        // Update mobile menu button icons
        const menuButtons = document.querySelectorAll(
          '[aria-label="Toggle menu"]'
        );
        menuButtons.forEach((button) => {
          if (button.id !== "menuIcon") {
            if (isOpen) {
              button.innerHTML = '<i class="fas fa-bars text-2xl"></i>';
            } else {
              button.innerHTML = '<i class="fas fa-times text-2xl"></i>';
            }
          }
        });
      }

      // Landing Animation
      document.addEventListener("DOMContentLoaded", function () {
        const container = document.getElementById("landingAnimation");
        if (!container) return;

        const textWrappers = container.querySelectorAll(".letter");
        textWrappers.forEach((wrapper) => {
          if (wrapper.textContent?.trim()) {
            wrapper.innerHTML = wrapper.textContent.replace(
              /\S/g,
              "<span class='letters'>$&</span>"
            );
          }
        });

        anime.timeline({ loop: false }).add({
          targets: ".letters",
          scale: [0.3, 1],
          opacity: [0, 1],
          translateZ: 0,
          easing: "easeOutExpo",
          duration: 100,
          delay: (_el, i) => 50 * (i + 1),
        });
      });

      async function fetchPeople() {
        try {
          const response = await fetch("https://kara-backend.vercel.app/users");
          const users = await response.json();
          const peopleScroller = document.getElementById("peopleScroller");
          if (!peopleScroller || !users.length) return;
          peopleScroller.innerHTML = "";
          [...users, ...users, ...users].forEach((user, index) => {
            const userElement = document.createElement("div");
            userElement.className = "flex items-center";
            userElement.innerHTML = `
              <div class="text-center flex w-max items-center px-3 text-white tracking-wider uppercase">
                <div class="size-12 relative">
                  <img src="${
                    user.image ||
                    "https://static-00.iconduck.com/assets.00/profile-default-icon-2048x2045-u3j7s5nj.png"
                  }" 
                       alt="" 
                       class="rounded-full object-cover w-full h-full" />
                </div>
                <div class="mx-4 text-left text-sm">
                  <p>${user.fullName || ""}</p>
                  ${
                    user.domain
                      ? `
                    <a href="https://${user.domain}" 
                       target="_blank" 
                       rel="noreferrer" 
                       class="lowercase hover:underline underline-offset-2">
                      ${user.domain}
                    </a>
                  `
                      : ""
                  }
                </div>
              </div>
              <div class="bg-white size-2 rounded-full mx-4"></div>
            `;
            peopleScroller.appendChild(userElement);
          });

          // Start animation after data is loaded
          let scrollAmount = 0;
          const scrollSpeed = 0.3;
          const animatePeople = () => {
            scrollAmount -= scrollSpeed;
            if (Math.abs(scrollAmount) >= peopleScroller.scrollWidth / 2) {
              scrollAmount = 0;
            }
            peopleScroller.style.transform = `translateX(${scrollAmount}px)`;
            requestAnimationFrame(animatePeople);
          };
          animatePeople();
        } catch (error) {
          console.error("Error fetching people:", error);
        }
      }

      // Call fetchPeople when the page loads
      document.addEventListener("DOMContentLoaded", fetchPeople);
    </script>
