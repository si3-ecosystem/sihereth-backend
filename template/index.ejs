        <!-- Footer Text -->
        <section
          class="font-sora font-normal leading-4 tracking-wider text-center text-white max-w-md mx-auto"
        >
          @2025 Solar Intelligence, Inc. All rights reserved.
        </section>
      </div>
    </div>

    <script>
      // Mobile Navigation
      function toggleMobileNav() {
        const nav = document.getElementById("mobileNav");
        nav.classList.toggle("translate-x-full");
      }

      // Language Dropdown
      function toggleLanguageDropdown() {
        const dropdown = document.getElementById("languageDropdown");
        dropdown.classList.toggle("hidden");
      }

      function selectRegion(region) {
        // Handle region selection
        console.log("Selected region:", region);
        document.getElementById("languageDropdown").classList.add("hidden");
      }

      // Close dropdowns when clicking outside
      document.addEventListener("click", function (event) {
        const dropdown = document.getElementById("languageDropdown");
        const button = event.target.closest("button");
        if (!button && !dropdown.contains(event.target)) {
          dropdown.classList.add("hidden");
        }
      });

      // Landing Animation
      document.addEventListener("DOMContentLoaded", function () {
        const container = document.getElementById("landingAnimation");
        if (!container) return;

        const textWrappers = container.querySelectorAll(".letter");
        textWrappers.forEach((wrapper) => {
          if (wrapper.textContent?.trim()) {
            wrapper.innerHTML = wrapper.textContent.replace(
              /\S/g,
              "<span class='letters'>$&</span>"
            );
          }
        });

        anime.timeline({ loop: false }).add({
          targets: ".letters",
          scale: [0.3, 1],
          opacity: [0, 1],
          translateZ: 0,
          easing: "easeOutExpo",
          duration: 100,
          delay: (_el, i) => 50 * (i + 1),
        });
      });

      // Slider Animation
      document.addEventListener("DOMContentLoaded", function () {
        const scroller = document.querySelector(".scroller");
        if (!scroller) return;
        let scrollAmount = 0;
        const scrollSpeed = 0.3;
        function animate() {
          scrollAmount -= scrollSpeed;
          if (Math.abs(scrollAmount) >= scroller.scrollWidth / 2) {
            scrollAmount = 0;
          }
          scroller.style.transform = `translateX(${scrollAmount}px)`;
          requestAnimationFrame(animate);
        }
        animate();
      });
    </script>
  </body>
</html>
